---
    import HelloWorld from "../components/HelloWorld.astro";
    import Syntax from "../components/Syntax.astro";
    import SvelteDemo from "../components/SvelteDemo.svelte"
    import UseSvelte from "../components/UseSvelte.astro";

    interface Props {
        layout?: string | undefined
    }

    const { layout } = Astro.props as Props
---

{layout === "hello-world-component" &&
<HelloWorld />}

{layout === "syntax-component" &&
<Syntax />}

{layout === "svelte-demo" &&
<SvelteDemo client:load />}

{layout === "svelte-using" &&
<UseSvelte />}