---

    interface Props {
        title: string
    }

    const { title } = Astro.props as Props
---

<div id="header" transition:animate="fade">
    <h1>{title}</h1>
</div>

<style>
    #header {
        display: flex;
        justify-content: center;
        color: var(--white);
    }

    h1 {
        text-align: center;
        margin-top: 5vh;
        font-size: 5vh;
    }
</style>